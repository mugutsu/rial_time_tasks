<h1>Проекты</h1>
<%= link_to 'Создать', new_project_path %>
<br>
<br>
<table>
  <tr>
    <th>Название</th>
    <th>Комментарий</th>
    <th colspan="3"></th>
  </tr>

  <% @project_list.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.comment %></td>
      <td><%= link_to 'Просмотр', project_path(project) %></td>
      <td>
          <%= link_to 'Удалить', project_path(project),
             method: :delete,
             data: { confirm: 'Вы уверены?' } %>
      </td>
      <td>
          <%= link_to 'Задачи', project_tasks_path(project) %>
      </td>
    </tr>
  <% end %>
</table>
